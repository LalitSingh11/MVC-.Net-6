<div class="container-fluid">
    <br />
    <form id="holdALotForm">
        <h6>
            Enable hold on lot feature <span class="tooltip-container"> <i class="bi bi-question-circle text-primary"></i> <span class="tooltip-content">Enable "Hold A Lot" Feature</span> </span>
        </h6>
        <div class="form-check form-check-inline m-1">
            <input class="form-check-input" type="radio" name="holdAlot" id="previewIspRadio1" value="true">
            <label class="form-check-label" for="previewIspRadio1">Yes</label>
        </div>
        <div class="form-check form-check-inline m-1">
            <input class="form-check-input" type="radio" name="holdAlot" id="previewIspRadio2" value="false">
            <label class="form-check-label" for="previewIspRadio2">No</label>
        </div>
        <div class="mb-2"></div>
        <div class="row g-3">
            <div class="col-md-4 hold-a-lot-content">
                <label for="builderEmail" class="form-label">Email Address to Receive Requests</label>
                <input type="email" class="form-control" name="builderEmail" id="builderEmail">
            </div>
            <div class="col-md-3 hold-a-lot-content">
                <label for="builderPhone" class="form-label">Phone Number</label>
                <input type="number" class="form-control" name="builderPhone" id="builderPhone">
            </div>
            <div class="col-md-6 hold-a-lot-content">
                <label for="holdAlotButtonText" class="form-label">Hold A Lot Button Text</label>
                <input type="text" class="form-control" name="holdAlotButtonText" id="holdAlotButtonText">
            </div>
        </div>
    </form>
    <h4>Customizable Content</h4>
    <table id="customizableContentTable" class="table table-striped table-hover table-responsive align-middle border">
        <thead>
            <tr>
                <th scope="col" class="col-sm-3">Location</th>
                <th scope="col">Content Type</th>
                <th scope="col">Content Value</th>
                <th scope="col">Action </th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
        </tbody>
    </table>
    <br/>
    <br/>
    <br/>
    <nav class="navbar fixed-bottom navbar-expand-lg bg-light justify-content-center">
        <footer class="footer">
            <button type="button" class="btn btn-primary" onclick="updateHoldALotConfiguration();">Save changes</button>
            <button type="button" class="btn" onclick="setSettingsValues();">Cancel</button>
        </footer>
    </nav>
</div>
