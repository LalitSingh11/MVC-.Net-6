<div class="container-fluid">
    <h2>User Information</h2>
    <hr />
    <form class="row g-3" id="user_update_form">
        <div class="col-md-6">
            <label for="firstName" class="form-label">First Name</label>
            <input type="text" class="form-control" name="firstName" id="firstName">
        </div>
        <div class="col-md-6">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" name="lastName" id="lastName">
        </div>
        <div class="col-md-6">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" name="username" id="username" autocomplete="new-password">
        </div>
        <div class="col-md-6">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" name="email" id="email">
        </div>
        <div class="col-md-6">
            <label for="phone" class="form-label">Phone Number</label>
            <input type="number" class="form-control" name="phone" id="phone">
        </div>
        <div class="col-12">
            <label class="form-check-label" for="isActiveCheck"> Status </label>
            <div>
                <input class="form-check-input" type="checkbox" name="isActiveCheck" id="isActiveCheck"> Is Active?
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="form-check form-check-inline">
                        <input type="radio" class="btn-check" name="userRole" id="option1" value="3" autocomplete="off">
                        <label class="btn btn-outline-secondary" for="option1">Sales Representative</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-check form-check-inline">
                        <input type="radio" class="btn-check" name="userRole" id="option2" value="2" autocomplete="off">
                        <label class="btn btn-outline-secondary" for="option2">Community Administrator</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-check form-check-inline">
                        <input type="radio" class="btn-check" name="userRole" id="option3" value="5" autocomplete="off">
                        <label class="btn btn-outline-secondary" for="option3">Lot Status Editor</label>
                    </div>
                </div>
            </div>
        </div>

        <partial name="Partials/_CommunityUserGrid" />
        <br />
        <h2>Reset Password</h2>
        <hr />
        <div class="row text-center">
            <div class="col-md-6">
                <label for="password">Password</label>
            </div>
            <div class="col-md-6">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" autocomplete="new-password">
            </div>
        </div>
        <br />
        <br />
        <div class="row text-center">
            <div class="col-md-6">
                <label for="confirm_password">Confirm Password</label>
            </div>
            <div class="col-md-6">
                <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Confirm Password">
            </div>
        </div>
    </form>
</div>

