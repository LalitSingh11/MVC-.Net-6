<div class="row-fluid">
    <div class="head-div">
        <h5>Display Homesite Status Filter <div class="tool-tip"><img src="~/Content/images/help-icon.png" style="width:16px;" /><span class="tooltiptext">Show Filter by Lot Status on ISP 2.0</span></div></h5>
    </div>
    <div class="radio-div">
        <input type="radio" name="showHomesiteFilter" value="true" data-bind="checked:ShowHomesiteFilter" class="isp-radio" /><span class="isp-config">Yes</span>
        <input type="radio" name="showHomesiteFilter" value="false" data-bind="checked:ShowHomesiteFilter" class="isp-radio" /><span>No</span>
    </div>
</div>

<div class="row-fluid">
    <div class="head-div">
        <h5>Show Bottom Bar <div class="tool-tip"><img src="~/Content/images/help-icon.png" style="width:16px;" /><span class="tooltiptext">Show/Hide Bottom Bar on ISP 2.0</span></div></h5>
    </div>
    <div class="radio-div">
        <input type="radio" name="ShowBottomBar" value="true" data-bind="checked:ShowBottomBar" class="isp-radio" /><span class="isp-config">Yes</span>
        <input type="radio" name="ShowBottomBar" value="false" data-bind="checked:ShowBottomBar" class="isp-radio" /><span>No</span>
    </div>
</div>
<div class="form-actions">
    <input type="button" class="btn btn-primary " value="Save Changes" data-bind="click:saveConfiguration" />
    <input type="button" class="btn " value="Cancel" data-bind="click:getConfiguration" />
</div>
