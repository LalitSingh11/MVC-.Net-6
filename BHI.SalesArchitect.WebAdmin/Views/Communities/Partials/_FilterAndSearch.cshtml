@using System.Security.Claims;
@using BHI.SalesArchitect.Core.Constants;
<div class="span12 search-filter-container">
    <div class="community-status-filter-container">
        <label class="community-status-filter-label">Type </label>
        <select class="community-status-filter m-1" id="commTypeFilter" onchange="onCommunityTypeChange(this.value);">
            <option value="0">BDXLive Connected</option>
            <option value="1">Standalone</option>
            <option value="2">All</option>
        </select>
        <div class="tool-tip"><img src="/content/images/help-icon.png" ><span class="tooltiptext">Standalone Communities are not linked to BDXLive data.</span></div>
    </div>
    @if (User.IsInRole(Roles.BHIADMIN))
    {
        <div class="community-status-filter-container" >
            <label class="community-status-filter-label">Status </label>
            <select class="community-status-filter m-1" id="commStatusFilter" onchange="onCommunityStatusChange(this.value);" >
                <option value="0">Active</option>
                <option value="1">Inactive</option>
                <option value="2">All</option>
            </select>
            <div class="tool-tip" ><img src="/content/images/help-icon.png" ><span class="tooltiptext" >Active/Inactive Community Status from BDXLive.</span></div>
        </div>
    }
    <div class="search">
        <div class="searchboxcontainer">
            <input type="text" placeholder="Search by Community name, builder/brand" size="40" id="searchBox">
            <span class="icon-search" onclick="searchCommunityGrid()" id="searchButton">
                <img src="/content/images/icon-search.png">
            </span>
        </div>
        <button class="clear disable" onclick="clearSearch()" id="clear-search">Clear Search</button>
    </div>
</div>
