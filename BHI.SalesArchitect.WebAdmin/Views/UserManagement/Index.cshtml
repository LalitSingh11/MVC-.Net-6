@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Communities";
}
<div class="container-fluid">
    <div class="row"><h3>Manage <em>@ViewData["PartnerName"]</em> Users</h3></div>
    <partial name="Partials/_UsersList" />
    <br />
    <partial name="Partials/_UserInformationForm" />
    <br />
    <br />
    <br />
    <nav class="navbar fixed-bottom navbar-expand-lg bg-light justify-content-center">
        <footer class="footer ">
            <button type="button" class="btn btn-primary" onclick="UpdateUserRoleAndInfo();">Save changes</button>
            @*<button type="button" class="btn" onclick="">Cancel</button>*@
        </footer>
    </nav>
</div>
@section Scripts {
    <script src="~/js/usermanagement/manage-users.js" asp-append-version="true"></script>
    <script src="~/lib/jqgrid/js/i18n/grid.locale-en.min.js" asp-append-version="true"></script>
    <script src="~/lib/jqgrid/js/jquery.jqgrid.min.js" asp-append-version="true"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js" asp-append-version="true"></script>
    <script src="~/lib/jqgrid/js/grid.jqueryui.min.js" asp-append-version="true"></script>
}

@section Styles {
    <link href="~/lib/jqgrid/css/ui.jqgrid.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/usermanagement/manage-users.css" rel="stylesheet" asp-append-version="true" />
}

@section Modals{
    <div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="deleteUserModalLabel">Delete User</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you Sure?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" onclick="deleteUser();" data-bs-dismiss="modal">Yes! I'm Sure</button>
                </div>
            </div>
        </div>
    </div>
}