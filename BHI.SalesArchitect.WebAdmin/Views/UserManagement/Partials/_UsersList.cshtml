@{
    var GRID_MANAGE_USER = "GridManageUser";
}
<div class="container-fluid">
    <hr />
     <a class="btn btn-success" style="float: right; margin-right: 10px;" asp-controller="UserManagement" asp-action="CreateUser">
        <i class="bi bi-person-plus-fill"></i> Create User
    </a>
    <button type="button" class="btn btn-danger" style="float: right; margin-right: 15px;" data-bs-toggle="modal" data-bs-target="#deleteUserModal">
        <i class="bi bi-trash3-fill"></i> Delete Selected
    </button> 
    <br />
    <br />
    <div class="d-flex justify-content-center">

        @(Html.Grid(GRID_MANAGE_USER)
            .AddColumn(new Column("ID").SetHidden(true))
            .AddColumn(new Column("UserName").SetAlign(Align.Center).SetWidth(150).SetLabel("User"))
            .AddColumn(new Column("FirstName").SetAlign(Align.Center).SetWidth(150).SetLabel("First Name"))
            .AddColumn(new Column("LastName").SetAlign(Align.Center).SetWidth(150).SetLabel("Last Name"))
            .AddColumn(new Column("Phone Number").SetHidden(true))
            .AddColumn(new Column("Email").SetAlign(Align.Center).SetWidth(350))
            .AddColumn(new Column("Status").SetAlign(Align.Center).SetWidth(250))
            .AddColumn(new Column("Partner").SetHidden(true))
            .AddColumn(new Column("Role").SetHidden(true))
            .AddColumn(new Column("Communities").SetHidden(true))
            .SetUrl(Url.Action("GetUsers"))
            .SetRequestType(RequestType.Get)
            .SetSortName("UserName")
            .SetSortOrder(SortOrder.Asc)
            .SetRowNum(10000)
            .SetAutoWidth(true)
            .SetScrollRows(true)
            //.SetHeight(450).
            .OnSelectRow("onUserRowSelected(rowid)")
            .SetViewRecords(true)
            .OnLoadComplete("onManageUserComplete()")
            .SetLoadText("Users loading...")
            )
    </div>
   
</div>


