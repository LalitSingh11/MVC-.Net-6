@model BHI.SalesArchitect.WebAdmin.Models.LoginModel;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    @*<meta name="servername" content="@System.Environment.MachineName" />*@
    <title>Sign In</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <h1 >Sales Architect</h1>
    <section class="login-form">
        <div id="divSign" class="login-form-content">
            <h2>Please Sign In</h2>
            <form asp-action="Login" role="form">
                <input type="hidden" asp-for="ReturnUrl" />
                <div class="form-group">
                    <input type="text" asp-for="UserName" class="form-input" required>
                    <label class="form-label">UserName*</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-input" required>
                    <label class="form-label">Password*</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group v-flex mb-0">
                    <button type="submit" class="v-blue">Login</button>
                </div>
            </form>
        </div>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

